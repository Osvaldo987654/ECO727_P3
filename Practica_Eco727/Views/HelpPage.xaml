<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica_Eco727.Views.HelpPage"
             Title="Ayuda"
             BackgroundColor="{AppThemeBinding Light='White', Dark='#121212'}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- CLIENTE -->
            <Label Text="Información del Cliente"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light='Black', Dark='White'}"
                   HorizontalOptions="Center"/>

            <Frame BackgroundColor="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                   BorderColor="{AppThemeBinding Light='#CCCCCC', Dark='#333333'}"
                   CornerRadius="12"
                   Padding="15">

                <VerticalStackLayout Spacing="10">

                    <Label Text="Desarrollado para:" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>
                    <Label Text="Estudiantina de la UPIICSA del IPN"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="Correo:" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <!-- CORREO -->
                    <Label Text="estudiantina.upiicsa@gmail.com"
                           TextColor="{AppThemeBinding Light='#1565C0', Dark='#82B1FF'}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding OpenUrlCommand}" 
                                CommandParameter="mailto:estudiantina.upiicsa@gmail.com"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Redes Sociales:" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <!-- YOUTUBE -->
                    <Label Text="YouTube"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="Abrir canal"
                           TextColor="{AppThemeBinding Light='#1565C0', Dark='#82B1FF'}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding OpenUrlCommand}" 
                                CommandParameter="https://www.youtube.com/@estudiantinaupiicsa8448"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- FACEBOOK -->
                    <Label Text="Facebook"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="Abrir perfil"
                           TextColor="{AppThemeBinding Light='#1565C0', Dark='#82B1FF'}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding OpenUrlCommand}" 
                                CommandParameter="https://www.facebook.com/estudiantina.de.la.upiicsa.del.ipn"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- WHATSAPP -->
                    <Label Text="WhatsApp"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="Enviar mensaje"
                           TextColor="{AppThemeBinding Light='#1565C0', Dark='#82B1FF'}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding OpenUrlCommand}" 
                                CommandParameter="https://wa.me/5215533430365"/>
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </Frame>


            <!-- DESARROLLADOR -->
            <Label Text="Información del Desarrollador"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light='Black', Dark='White'}"
                   HorizontalOptions="Center"/>

            <Frame BackgroundColor="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                   BorderColor="{AppThemeBinding Light='#CCCCCC', Dark='#333333'}"
                   CornerRadius="12"
                   Padding="15">

                <VerticalStackLayout Spacing="10">

                    <Label Text="Nombre:"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>
                    <Label Text="Miguel Osvaldo Cisneros Fernández"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="Correo de contacto:"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="miguel.cisneros.127@soycecytem.mx"
                           TextColor="{AppThemeBinding Light='#1565C0', Dark='#82B1FF'}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding OpenUrlCommand}" 
                                CommandParameter="mailto:miguel.cisneros.127@soycecytem.mx"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="cifmosvaldo@gmail.com"
                           TextColor="{AppThemeBinding Light='#1565C0', Dark='#82B1FF'}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding OpenUrlCommand}" 
                                CommandParameter="mailto:cifmosvaldo@gmail.com"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="WhatsApp"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="Enviar mensaje"
                           TextColor="{AppThemeBinding Light='#1565C0', Dark='#82B1FF'}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding OpenUrlCommand}" 
                                CommandParameter="https://wa.me/5215533430365"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Soporte:"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>

                    <Label Text="Si tienes dudas sobre el uso de la app, puedes enviarme un mensaje y con gusto te ayudo."
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>
                </VerticalStackLayout>
            </Frame>


            <!-- VERSION -->
            <Frame BackgroundColor="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                   BorderColor="{AppThemeBinding Light='#CCCCCC', Dark='#333333'}"
                   CornerRadius="12"
                   Padding="15">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Versión de la aplicación:"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>
                    <Label Text="1.0.0"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- BOTON VOLVER -->
            <Button
                Text="⬅️ Volver"
                BackgroundColor="#1565C0"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                Margin="0,10,0,0"
                Clicked="OnBackClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
